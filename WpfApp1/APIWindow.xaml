<Window x:Class="WpfApp1.APIWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Валидация данных" Height="300" Width="400">
    <Grid>
        <Grid VerticalAlignment="Top" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Получить данные" Click="GetAPIData_Click" Width="150" Height="30" Margin="5" Style="{StaticResource ButtonDefaultStyle}"/>
            <TextBlock Grid.Column="1" x:Name="DataTextBlock" Text="" Width="200"  Margin="5" FontFamily="Times New Roman" FontSize="14" VerticalAlignment="Center"/>
        </Grid>
        <Grid Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Отправить результаты теста" Click="CheckAccuracy_Click" Width="230" Height="30" Margin="5" Style="{StaticResource ButtonDefaultStyle}"/>
            <TextBlock Grid.Column="1" x:Name="CheckResult" HorizontalAlignment="Left" Text="1423423423423" Margin="5" FontFamily="Times New Roman" FontSize="14" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
